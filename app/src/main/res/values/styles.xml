<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">#546E7A</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/playfair</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:windowBackground">@drawable/bg13</item>
    </style>

    <style name="SplashFragmentShortScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SplashFragmentTallScreen">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StatsFragmentShortScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatsFragmentTallScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ResultsFragmentThemeShortScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ResultsFragmentThemeTallScreen">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StoryFragmentShortScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StoryFragmentTallScreen">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HighScoreListShortScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HighScoreListTallScreen">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HighScoreSummaryShortScreen">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HighScoreSummaryTallScreen">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
