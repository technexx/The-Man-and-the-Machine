<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteY="50dp"
    android:background="@drawable/test_border_one"
    android:theme="@style/StatsFragmentTallScreen">

    <!--Misalignment of stat numbers due to different spacing between stat names-->

    <TextView
        android:id="@+id/machine_header"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/man_header"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/strength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/machine_header" />

    <TextView
        android:id="@+id/dexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/dexterity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strength"/>

    <TextView
        android:id="@+id/intelligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/intelligence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dexterity" />

    <TextView
        android:id="@+id/loyalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/loyalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beauty" />

    <TextView
        android:id="@+id/beauty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/beauty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intelligence" />

    <TextView
        android:id="@+id/sanity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp"
        android:text="@string/sanity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/man_header" />

    <TextView
        android:id="@+id/endurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp"
        android:text="@string/endurance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sanity" />

    <TextView
        android:id="@+id/wealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp"
        android:text="@string/wealth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endurance" />

    <TextView
        android:id="@+id/anonymity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp"
        android:text="@string/anonymity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wealth" />

    <TextView
        android:id="@+id/stats_reveal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anonymity">
    </TextView>

    <TextView
        android:id="@+id/strengthX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/strengthVal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toBottomOf="@id/machine_header" />

    <TextView
        android:id="@+id/dexterityX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/dexVal"
        app:layout_constraintTop_toBottomOf="@+id/strengthX" />

    <TextView
        android:id="@+id/intelligenceX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/tempVal"
        app:layout_constraintTop_toBottomOf="@+id/dexterityX" />

    <TextView
        android:id="@+id/loyaltyX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/obedVal"
        app:layout_constraintTop_toBottomOf="@+id/beautyX" />

    <TextView
        android:id="@+id/beautyX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/charVal"
        app:layout_constraintTop_toBottomOf="@id/intelligenceX" />

    <TextView
        android:id="@+id/sanityX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/sanVal"
        app:layout_constraintTop_toBottomOf="@id/man_header"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp" />

    <TextView
        android:id="@+id/enduranceX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp"
        app:layout_constraintLeft_toRightOf="@id/endVal"
        app:layout_constraintTop_toBottomOf="@+id/sanityX" />

    <TextView
        android:id="@+id/wealthX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/comVal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toBottomOf="@+id/enduranceX" />

    <TextView
        android:id="@+id/anonymityX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/anonVal"
        app:layout_constraintTop_toBottomOf="@+id/wealthX" />

    <TextView
        android:id="@+id/fluxX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/fluxVal"
        app:layout_constraintTop_toBottomOf="@+id/anonymityX" />

    <TextView
        android:id="@+id/strengthVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:text="@string/strength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/machine_header" />

    <TextView
        android:id="@+id/dexVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:text="@string/dexterity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/strengthVal" />

    <TextView
        android:id="@+id/tempVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:text="@string/intelligence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dexVal" />

    <TextView
        android:id="@+id/obedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:text="@string/loyalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/charVal" />

    <TextView
        android:id="@+id/charVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:text="@string/beauty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tempVal" />

    <TextView
        android:id="@+id/sanVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="4dp"
        android:text="@string/sanity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/man_header" />

    <TextView
        android:id="@+id/endVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="4dp"
        android:text="@string/endurance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sanVal" />

    <TextView
        android:id="@+id/comVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="4dp"
        android:text="@string/wealth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/endVal" />

    <TextView
        android:id="@+id/anonVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="4dp"
        android:text="@string/anonymity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comVal" />

    <TextView
        android:id="@+id/fluxVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="4dp"
        android:text="@string/anonymity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anonVal" />

    <TextView
        android:id="@+id/territory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loyalty"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp">
    </TextView>

    <TextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_reveal"
        android:layout_marginStart="195dp"
        android:layout_marginTop="4dp">
    </TextView>

    <TextView
        android:id="@+id/terVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obedVal">
    </TextView>

    <TextView
        android:id="@+id/supVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="295dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_reveal">
    </TextView>

    <TextView
        android:id="@+id/terX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/terVal"
        app:layout_constraintTop_toBottomOf="@id/loyaltyX">
    </TextView>

    <TextView
        android:id="@+id/supX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/supVal"
        app:layout_constraintTop_toBottomOf="@id/fluxX">
    </TextView>

    <TextView
        android:id="@+id/virus_machine"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp">
    </TextView>

    <TextView
        android:id="@+id/virus_man"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/man_header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>