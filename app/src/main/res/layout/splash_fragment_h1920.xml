<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/SplashFragmentTallScreen">

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/splash_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_text"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/splash_text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_text_two"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/splash_text_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_text_three"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/splash_text_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_text_four"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/splash_text_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_text_five"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/splash_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/splash_text_six"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/White"
        app:backgroundTint="@color/transparent"
        app:cornerRadius="1dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/dark_teal"
        app:strokeWidth="2dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/splash_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/splash_text_six"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/White"
        app:backgroundTint="@color/transparent"
        app:cornerRadius="1dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/dark_teal"
        app:strokeWidth="2dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/skip_intro"
        android:text="@string/skip_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/White"
        app:backgroundTint="@color/transparent"
        app:cornerRadius="1dp"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/dark_teal"
        app:strokeWidth="2dp"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>